<Window x:Class="AIDemoUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIDemoUI"
        xmlns:views="clr-namespace:AIDemoUI.Views"
        xmlns:sd="clr-namespace:AIDemoUI.SampleData"
        xmlns:vm="clr-namespace:AIDemoUI.ViewModels"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="990" Width="1760"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize">

    <d:Window.DataContext>
        <sd:MainWindowVMSampleData/>
    </d:Window.DataContext>

    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>
    
    <Window.Resources>
        <DataTemplate x:Key="NetParametersView">
            <views:NetParametersView/>
        </DataTemplate>
        <DataTemplate x:Key="StatusView">
            <views:StatusView/>
        </DataTemplate>
        <DataTemplate x:Key="StartStopView">
            <views:StartStopView/>
        </DataTemplate>
    </Window.Resources>

    <Grid Name="thisRootElement">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".25*"/>
            <RowDefinition Height="7.75*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nav Bar -->

        <Menu Name="ImportExportMenu" Grid.Row="0" HorizontalAlignment="Left" Width="150">
            <MenuItem Width="150" Height="25" Margin="0" Padding="0">
                <MenuItem.Header>
                    <Label Content="Im/Export" Width="150" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </MenuItem.Header>

                <Label Content="Load Parameters" Width="150" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding LoadParametersCommandAsync}"/>
                    </Label.InputBindings>
                </Label>
                <Label Content="Save Parameters" Width="150" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding SaveParametersCommandAsync}"/>
                    </Label.InputBindings>
                </Label>
                <Separator/>
                <Label Content="Load Initialized Net" Width="150" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding LoadInitializedNetCommandAsync}"/>
                    </Label.InputBindings>
                </Label>
                <Label Content="Save Initialized Net" Width="150" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding SaveInitializedNetCommandAsync}"/>
                    </Label.InputBindings>
                </Label>

            </MenuItem>
        </Menu>

        <Button x:Name="ExitButton" Grid.Column="1" HorizontalAlignment="Right" Width="25" Content="X" Command="{Binding ExitCommand}"/>
        
        <!-- Sub Views -->
        
        <ContentControl Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                        Name="NetParametersCC"
                        Content="{Binding Path=NetParametersVM}"
                        ContentTemplate="{StaticResource NetParametersView}"/>

        <ContentControl Grid.Column="0" Grid.Row="2"
                        Name="StatusCC"
                        Content="{Binding Path=StatusVM}"
                        ContentTemplate="{StaticResource StatusView}"/>

        <ContentControl Grid.Column="1" Grid.Row="2"
                        Name="StartStopCC"
                        Content="{Binding Path=StartStopVM}"
                        ContentTemplate="{StaticResource StartStopView}"/>
    </Grid>
</Window>
