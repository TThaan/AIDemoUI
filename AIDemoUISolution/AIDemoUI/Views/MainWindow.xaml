<Window x:Class="AIDemoUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIDemoUI"
        xmlns:views="clr-namespace:AIDemoUI.Views"
        xmlns:sd="clr-namespace:AIDemoUI.SampleData"
        xmlns:vm="clr-namespace:AIDemoUI.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen">
        <!--Loaded="MainWindow_OnLoaded"-->

    <d:Window.DataContext>
        <sd:MainWindowVMSampleData/>
    </d:Window.DataContext>

    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>
    
    <Window.Resources>
        <DataTemplate x:Key="NetParametersView">
            <views:NetParametersView/>
        </DataTemplate>
    </Window.Resources>

    <Grid Name="thisRootElement">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ContentControl Name="NetParametersCC"
                        Content="{Binding Path=NetParametersVM}"
                        ContentTemplate="{StaticResource NetParametersView}"
                        Grid.Column="0" Grid.ColumnSpan="2"/>

        <Grid Grid.Column="0" Grid.Row="1">
            <ProgressBar Minimum="0" Maximum="{Binding ProgressBarMax}" Value="{Binding ProgressBarValue}"/>
            <TextBlock Text="{Binding ProgressBarText}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--<Border Grid.Column="0" Grid.Row="0" BorderBrush="LightGray" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Observer Gap" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                    <TextBox VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,10"
                         Text="{Binding Path=ObserverGap}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding UnfocusCommand}" CommandParameter="{Binding ElementName=thisRootElement}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>
            </Border>-->

            <Border Grid.Column="1" Grid.Row="0" BorderBrush="LightGray" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Step-by-Step" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                    <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,10"
                              IsChecked="{Binding Stepwise}">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </CheckBox.LayoutTransform>
                    </CheckBox>
                </StackPanel>
            </Border>

            <!-- Run/Step Buttons -->

            <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" MinHeight="50" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="20" 
                        Content="{Binding RunButtonText}" Command="{Binding RunCommandAsync}"/>
                <Button Grid.Column="1" MinHeight="50" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="20" 
                        Content="{Binding StepButtonText}" Command="{Binding StepCommand}"/>
            </Grid>
            
        </Grid>
    </Grid>
</Window>
